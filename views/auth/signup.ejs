<%- include('../includes/head.ejs') %>
</head>

<body>
    <div class="container">
        <%- include('../includes/navigation.ejs') %>
        <div class="page-container">
            <div class="login-form-container"> 
                <h1>Luo tili</h1>
                <% if(errorMessage) { %>
                    
                    <div class="user-message user-message-error"><%= errorMessage %></div>
                    
                <% } %>
                <form method="post" action="/signup" novalidate> 
                    <div class="login-module">
                        <div class="text-field base ">
                            <label for="name">Sinun nimi*</label>
                            <input class="<%= validationErrors.find(el => el.param === 'name') ? 'invalid' : '' %>"
                                id="name" type="text" name="name" placeholder= "" value="<%= oldInput.name %>">
                        </div>
                        <div class="text-field base">
                            <label for="email">Sähköpostiosoite*</label>
                            <input class="<%= validationErrors.find(el => el.param === 'email') ? 'invalid' : '' %>"
                                id="email" type="email" name="email" placeholder= "" value="<%= oldInput.email %>">
                        </div>
                        <div class="text-field base">
                          <label for="phoneNumber">Puhelinnumero*</label>
                          <input class="<%= validationErrors.find(el => el.param === 'phoneNumber') ? 'invalid' : '' %>"
                            id="phone" type="text" name="phoneNumber" placeholder= "" value="<%= oldInput.phoneNumber %>">
                      </div>
                        <div class="text-field base">
                            <label for="password">Luoda salasana*</label>
                            <input class="<%= validationErrors.find(el => el.param === 'password') ? 'invalid' : '' %>"
                                id="password" type="password" name="password" placeholder= "" value="<%= oldInput.password %>">
                        </div>
                        <div class="text-field base">
                            <label for="confirmPassword">Toista salasana*</label>
                            <input class="<%= validationErrors.find(el => el.param === 'confirmPassword') ? 'invalid' : '' %>"
                                id="confirmPassword" type="password" name="confirmPassword" placeholder= "" value="<%= oldInput.confirmPassword %>">
                        </div>
                        <div class="search-button base">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="button-green button login-button" type="submit">Luo tili</button>   
                        </div>
                        <div class="forgot-link">
                            <a href="/reset">Uhnoditko salasanasi?</a>
                        </div>
                    </div>
                </form>     
            </div>           
        </div>
    </div>    
    <%- include('../includes/end.ejs') %>