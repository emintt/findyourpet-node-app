<body>
    <div class="container"> 
        <%- include('../includes/navigation.ejs') %>
        <div class="page-container">
            <div class="login-form-container"> 
                <h1>Salasanan palautus</h1>
                <% if(errorMessage) { %>
                <div class="user-message user-message-error"><%= errorMessage %></div>
                <% } %>
                <form method="POST" action="/login"> 
                    <div class="login-module">
                        <div class="text-field base">
                            <label for="email">Sähköpostiosoite</label>
                            <input id="email" type="text" name="email" placeholder= "">
                        </div>
                        <div class="search-button base">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="button-green button login-button" type="submit">Lähetä salasanan palautuslinkki sähköpostitse</button>   
                        </div>
                    </div>
                </form>     
            </div>           
        </div>
    </div>    
